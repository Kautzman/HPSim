<Window x:Class="BadSimCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BadSimCraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="739.544" Width="1108.5">
    <Grid>

        <DataGrid Name="LogGrid" Width="800" HorizontalAlignment="Left" Height="650" VerticalAlignment="Top" ItemsSource="{Binding}">

        </DataGrid>

        <Button Click="StartTheSim" Content="Start Sim" Margin="10, 0, 0, 10" Width="100" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
        <Button Click="StopTheSim" Content="Export Data to CSV" Margin="120, 0, 0, 10" Width="120" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
        <Button Click="ResetTheSim" Content="Reset" Margin="250, 0, 0, 10" Width="100" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
    </Grid>
</Window>
